generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model post {
  post_id     Int      @id @default(autoincrement())
  topic_id    Int
  title       String
  content     String
  upload_time DateTime @default(now()) @db.Timestamp(6)
  creator_id  Int
  user        user     @relation(fields: [creator_id], references: [user_id], onDelete: NoAction, onUpdate: NoAction, map: "Post creator")
  topics      topics   @relation(fields: [topic_id], references: [topic_id], onDelete: NoAction, onUpdate: NoAction, map: "Post topic")
}

model topics {
  topic_id          Int     @id
  topic_name        String  @unique
  picture           String
  topic_description String?
  post              post[]
}

model user {
  user_id      Int       @id @default(autoincrement())
  display_name String
  user_mail    String    @unique(map: "user_user_name_key")
  birthday     DateTime? @db.Date
  biography    String?
  phone_number Int?
  picture      String?
  post         post[]
}
